            android:background="#fff"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/presence_away" />
                <!--android:src="@android:drawable/radiobutton_off_background"-->
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/top_bar_label_rep"
                        android:layout_gravity="center_horizontal"
                        style="@style/PlaceView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                            android:text="Drop off point"
                        android:textColor="#069614"/>
                    <TextView
                        android:id="@+id/top_bar_location_rep"
                        android:layout_gravity="center_horizontal"
                        style="@style/PlaceView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drop off location"
                        android:gravity="top|center_horizontal"/>
                    <!--<AutoCompleteTextView-->
                    <!--android:id="@+id/pickUpEdit"-->
                    <!--style="@style/PlaceView"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:hint="Pick Up at Pin"-->
                    <!--android:gravity="top|center_horizontal"/>-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/map"
        tools:context=".mapping.MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>
                <LinearLayout
                    android:id="@+id/locationMarker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:paddingBottom="87dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                <TextView
                    android:id="@+id/locationtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/marker_background"
                    android:gravity="center"
                    android:text="Click to request pick up here"
                    android:textColor="@android:color/white"
                    android:minWidth="200dp"/>

                <ImageView
                    android:id="@+id/imageMarker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/location_picker_marker" />
                </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            android:layout_margin="4dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                style="@style/PlaceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose vehicle "
                android:textColor="#069614"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                >
                <LinearLayout

                    android:layout_marginRight="4dp"
                    android:id="@+id/select_individual"

                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">
                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="44dp"
                        android:src="@drawable/luggage1"/>
                    <ToggleButton
                        android:id="@+id/toggleButton0"
                        android:layout_width="50dp"

                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        style="@style/toggleButton"
                        android:background="@drawable/ic_toggle_bg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="4dp"
                    android:id="@+id/select_bike"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">
                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="44dp"
                        android:src="@drawable/bike"/>
                    <ToggleButton
                        android:id="@+id/toggleButton1"
                        android:layout_width="50dp"

                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        style="@style/toggleButton"
                        android:background="@drawable/ic_toggle_bg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="4dp"
                    android:id="@+id/select_pick_up"

                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">
                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="44dp"
                        android:src="@drawable/pick_up"/>
                    <ToggleButton
                        android:id="@+id/toggleButton2"
                        android:layout_width="50dp"

                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        style="@style/toggleButton"
                        android:background="@drawable/ic_toggle_bg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/select_lorry"

                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="44dp"
                        android:src="@drawable/lorry"/>
                    <ToggleButton
                        android:id="@+id/toggleButton3"
                        android:layout_width="50dp"

                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        style="@style/toggleButton"
                        android:background="@drawable/ic_toggle_bg"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
        <android.support.v7.widget.CardView
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_margin="4dp"
            android:elevation="2dp"
            android:id="@+id/go"
            android:layout_gravity="center_horizontal|bottom"
            android:clickable="true"
            card_view:cardCornerRadius="4dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="mushirih.progress.MainActivity"
                tools:showIn="@layout/activity_maps">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/progressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress of Request" />
                <com.badoualy.stepperindicator.StepperIndicator
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/progressTitle"
                    android:id="@+id/progressStepper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:stpi_stepCount="6"/>
                <TextView
                    android:layout_below="@+id/progressStepper"
                    android:layout_marginTop="4dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/next_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request Completion" />
                <LinearLayout
                    android:layout_below="@+id/next_action"
                    android:id="@+id/request_pane"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatButton
                            android:layout_margin="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/confirm"
                            android:text="Confirm Request"
                            android:textColor="@color/white"
                            android:background="@color/colorPrimary"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
