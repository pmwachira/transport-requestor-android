        android:layout_margin="4dp"
        android:layout_marginTop="2dp"
        android:elevation="2dp"
        android:id="@+id/second_hide"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        card_view:cardCornerRadius="4dp"
