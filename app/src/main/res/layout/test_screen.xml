<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="16dp" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_marginTop="12dp"
        android:id="@+id/one"
        android:background="#1aa710"
            android:text="Screen 1"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="8dp"
        android:layout_below="@+id/confirmSign"
        android:id="@+id/two"
        android:background="@color/colorPrimary"
        android:text="Screen 2"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="8dp"
        android:layout_below="@+id/submitSign"
        android:id="@+id/three"
        android:background="#a92486"
        android:text="Screen 3"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="8dp"
        android:layout_below="@+id/submitSign"
        android:id="@+id/four"
        android:background="#a99c24"
        android:text="Screen 4"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>