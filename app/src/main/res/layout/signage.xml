<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="5dp"
        android:elevation="2dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        card_view:cardCornerRadius="4dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/driver_pic"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
            </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:padding="2dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/driver_pic"
            android:layout_centerVertical="true"
            android:layout_weight="1"
           android:id="@+id/driver_name"
            android:text="Name of transporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="5dp"
        android:elevation="2dp"

        android:layout_gravity="center_horizontal"
        android:clickable="true"
        card_view:cardCornerRadius="4dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <TextView
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="ID of Person to pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:text="30303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Picture of load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="5dp"
        android:elevation="2dp"

        android:clickable="true"
        card_view:cardCornerRadius="4dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:weightSum="2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver's ID"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client's ID"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="5dp"
        android:elevation="2dp"
        android:clickable="true"

        card_view:cardCornerRadius="4dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:weightSum="2"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver's Sign"/>
                <view
                    android:layout_centerInParent="true"
                    class="mushirih.pickup.pdf.DrawingView2"
                    android:layout_width="match_parent"
                    android:id="@+id/draw_driver"
                    android:layout_height="100dp"
                    />
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                   <ImageView
                       android:layout_weight="1"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:src="@drawable/ok"/>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cancel"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="2dp">
                <TextView
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client's Sign"/>
                <view
                    android:layout_centerInParent="true"
                    class="mushirih.pickup.pdf.DrawingView"
                    android:layout_width="match_parent"
                    android:id="@+id/draw_client"
                    android:layout_height="100dp"
                    />
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ok"/>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cancel"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnaccept"
        android:layout_marginTop="12dp"
         android:layout_margin="8dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="Accept"
            android:background="@color/colorPrimary"
        android:textColor="@color/white"

        />


</LinearLayout>